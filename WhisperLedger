if((d as WeaverNode).keyLevel){
const kl = (d as WeaverNode).keyLevel!;
d3.select(this).append('circle')
.attr('r', baseR + 3)
.attr('stroke', ringColor(kl))
.attr('stroke-width', kl >=3 ? 2.5 : 1.5)
.attr('fill','none')
